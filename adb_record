#!/bin/bash
location=$(dirname "$0")
source $location/device_chooser
trap 'ctrlc $@' 1 2 3 6 15

ctrlc()
{
sleep 1
if [ -z "$1" ] ; then
   adb -s $SELECTED_DEVICE pull /mnt/sdcard/output.mp4 ~/Desktop/video-$(date +%Y-%m-%d-%H-%M-%S).mp4
else
   adb -s $SELECTED_DEVICE pull /mnt/sdcard/output.mp4 ~/Desktop/$1.mp4
fi
adb -s $SELECTED_DEVICE shell rm /mnt/sdcard/output.mp4
exit
}

choose_device

echo "ðŸ“¹ Starting recording on $SELECTED_DEVICE, stop it with ctrl^c"
adb -s $SELECTED_DEVICE shell screenrecord /mnt/sdcard/output.mp4
