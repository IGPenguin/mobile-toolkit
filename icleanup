#!/bin/bash
LOCATION=$(dirname "$0")
source $LOCATION/common_tools
ios_choose_device

should_proceed "ðŸ”¥ Delete all third party apps?"

ios_get_package_list

for PKG in "${PACKAGE_LIST[@]}"
do

   if [[ $PKG = *"funtaster"* ]] || [[ $PKG = *"com.apple.TestFlight"* ]] || [[ $PKG = *"sketch"* ]]; then
      echo "âŒ›ï¸ Skipping $PKG"
      continue
   fi

   echo "ðŸ”¥ Uninstalling $PKG"
   ideviceinstaller -u $SELECTED_DEVICE -U $PKG &> /dev/null
done

echo "âœ… Device is now clean."
