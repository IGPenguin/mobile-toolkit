#!/bin/bash
trap "kill 0" SIGINT # Kill all spawned subprocesses on ctrl^c
LOCATION=$(dirname "$0")
source "$LOCATION"/../common_tools

init(){
  check_dependency "ideviceinstaller"
  IGNORED_PACKAGES=( "com.apple.TestFlight" "motif.FramerPreview" "com.figma.FigmaMirror" "com.invisionapp.InVisionApp-iOS" )
}

ios_get_package_list(){
  echo "‚è≥ Getting third-party package list..."
  PACKAGE_LIST=()
  ALL_INFO_LIST=($(ideviceinstaller -u "$SELECTED_DEVICE" -l -o list_user | tail -n +2 | sed -e 's/.*=//' | sort))

  for PACKAGE in "${ALL_INFO_LIST[@]}" #remove redundant information
    do
      echo "$PACKAGE" | grep -q '"'
      EXIT_CODE=$?

      if [ $EXIT_CODE -ne 0 ]; then
        PACKAGE=${PACKAGE%,*}
        PACKAGE_LIST+=("$PACKAGE")
      fi
    done

  if [ ${#PACKAGE_LIST[@]} -eq 0 ]; then
    echo "ü§∑‚Äç No packages installed."
    exit
  fi
}

filter_packages(){
  PACKAGES_FILTERED=()
  for PKG in "${PACKAGE_LIST[@]}" #removes trailing \r
  do
    PKG=${PKG%$'\r'}
    echo "${IGNORED_PACKAGES[*]}" | grep -w "$PKG" &> /dev/null && { echo "‚è© Skipped \"$PKG\""; continue; }
    PACKAGES_FILTERED+=("$PKG")
  done

  if [ ${#PACKAGES_FILTERED[@]} -eq 0 ]; then
      echo "ü§∑‚Äç Nothing to uninstall"
      exit
  fi
}

select_option(){
  echo "üìã Choose package number:"
  select OPTION in "${PACKAGES_FILTERED[@]}"
  do
   case $OPTION in
      *) PACKAGE=$OPTION;break; ;;
    esac
  done
  if [[ -z $PACKAGE ]]; then
    echo "‚ùå Invalid option picked, retry"
    select_option
  fi
}

uninstall_package(){
  PACKAGE="$1"
  echo "${PACKAGE_LIST[*]}" | grep -w "$PACKAGE" &> /dev/null || { echo "ü§∑‚Äç Package \"$PACKAGE\" not installed"; return 1; }
  echo "${IGNORED_PACKAGES[*]}" | grep -w "$PACKAGE" &> /dev/null && { echo "‚ùå Package \"$PACKAGE\" is whitelisted"; return 1; }

  echo "üî• Uninstalling \"$PACKAGE\"..."
  ideviceinstaller -u "$SELECTED_DEVICE" -U "$PACKAGE" &> /dev/null
  return 0
}

uninstall_all(){
  tput setaf 1
  should_proceed "üí£ Delete all third-party apps on $SELECTED_DEVICE_MODEL - $SELECTED_DEVICE?"
  tput sgr0
  for PKG in "${PACKAGE_LIST[@]}"
  do
    uninstall_package "$PKG" &
  done
  wait
}

handle_arguments(){
  if [[  "$1" == "-w" ]]; then
    uninstall_all
  elif [[ -n "$1" ]]; then
    uninstall_package "$1"
  fi

  if [ -z "$1" ]; then
    if [ ${#PACKAGE_LIST[@]} -eq 0 ]; then
        echo "ü§∑‚Äç Nothing to uninstall"
        exit
    fi
    filter_packages
    select_option
    uninstall_package "$PACKAGE"
  fi
}

ios_choose_device
init
ios_get_package_list
handle_arguments "$@"
echo "‚úÖ Done"
