#!/bin/bash
LOCATION=$(dirname "$0")
source $LOCATION/../common_tools
ios_choose_device
ios_check_developer_image $SELECTED_DEVICE

take_screenshot(){
  idevicescreenshot -u $SELECTED_DEVICE $FILENAME.png &> /dev/null
  EXIT_CODE=$?
  if [ $EXIT_CODE -eq 0 ]; then
    echo "ðŸ“¸ Screenshot saved into $FILENAME.png"
  else
    echo "ðŸ¤· Screenshot failed, error code: $EXIT_CODE"
    prompt_xcode_launch
    take_screenshot
  fi
}

cd ~/Desktop
if [ -z "$1" ] ; then
  FILENAME=$SELECTED_DEVICE_MODEL-iOS$SELECTED_DEVICE_VERSION-$(date +%Y-%m-%d-%H-%M-%S)
else
  FILENAME=$1
fi

take_screenshot

