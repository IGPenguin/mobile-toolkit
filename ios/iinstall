#!/bin/bash
trap "kill 0" SIGINT # Kill all spawned subprocesses on ctrl^c
LOCATION=$(dirname "$0")
source "$LOCATION"/../common_tools

install_app(){
  echo "âŒ›ï¸ Installing \"$2\" to $1..."
  TEMPORARY_FILE="$TEMPORARY_FILE-$(date +%s)"
  go-ios install --udid="$1" --path="$PWD/$2" &> "$TEMPORARY_FILE"
  if grep -q 'err' "$TEMPORARY_FILE" ; then
    echo "âŒ Installation to $1 failed!"
    echo "ðŸ¤• Uninstall existing version or troubleshoot the package."
    echo "ðŸ”¥ Error details: $(grep 'err' "$TEMPORARY_FILE" | jq -r '.err')"
    exit 1
  fi
  echo "âœ… Successfully installed to $1"
  run_app "$1" "$PWD/$2"
}

run_app(){
  echo "ðŸš€ Launching \"$BUNDLE_ID\" on $1..."
  go-ios launch "$BUNDLE_ID" --udid="$1" &> /dev/null
}

check_args_valid(){
  if [[ "$1" != "-a" ]]; then
    FILE=$1
  else
    FILE=$2
  fi

  if [ ! -f "$PWD/$FILE" ] && [ ! -f "$FILE" ]; then
      abort "ðŸ¤· Installation file not found!"
  fi

  if [[ "$FILE" != *".ipa" ]]; then
      abort "ðŸ¤· Unsupported file!"
  fi
}

get_bundle_id(){
  echo "ðŸ” Detecting bundle ID..."
  unzip "$1" &> /dev/null
  APP_FILENAME=$(ls "$PWD"/Payload)
  BUNDLE_ID=$(grep "$PWD/Payload/$APP_FILENAME/embedded.mobileprovision" -a -e "[.]com[.]" | sed 's/.[^.]*\.//' | sed 's/\<.*$//')
  if [[ "$BUNDLE_ID" == "" ]]; then # Fallback for bundle identifiers containing "app" instead of "com"
    BUNDLE_ID=$(grep "$PWD/Payload/$APP_FILENAME/embedded.mobileprovision" -a -e "[.]app[.]" | sed 's/.[^.]*\.//' | sed 's/\<.*$//')
  fi
  rm -rf "$PWD/Payload"
}

run(){
  if [[ $1 == "-a" ]]; then
    check_for_update
    ios_get_devices
    get_bundle_id "$2"
    for ID in "${IOS_USB_DEVICES[@]}"
     do
      install_app "$ID" "$2" &
    done
    wait
  else
    ios_choose_device
    get_bundle_id "$2"
    install_app "$SELECTED_DEVICE" "$1"
  fi
}

check_args_valid "$@"
run "$@"
