#!/bin/bash
LOCATION=$(dirname "$0")
source "$LOCATION"/../common_tools

install_app(){
  echo "‚åõÔ∏è Installing \"$2\" to $1..."
  ideviceinstaller -u "$1" -i "$2" &> /dev/null && echo "‚úÖ Installed successfully!" || echo "‚ùå Installation failed, uninstall existing version or troubleshoot the build"
}

check_args_valid(){
  if [[ "$1" != "-a" ]]; then
    FILE=$1
  else
    FILE=$2
  fi

  if [ ! -f "$PWD/$FILE" ] && [ ! -f "$FILE" ]; then
      abort "ü§∑ Installation file not found!"
  fi

  if [[ "$FILE" != *".ipa" ]]; then
      abort "ü§∑ Unsupported file!"
  fi
}

run(){
  if [[ $1 == "-a" ]]; then
    ios_get_devices
    for ID in "${IOS_USB_DEVICES[@]}"
     do
      install_app "$ID" "$2" &
    done
    wait
  else
    ios_choose_device
    install_app "$SELECTED_DEVICE" "$1"
  fi
}

check_args_valid "$@"
run "$@"
