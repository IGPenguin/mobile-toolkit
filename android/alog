#!/bin/bash
LOCATION=$(dirname "$0")
source $LOCATION/../common_tools
android_choose_device

filter_by_package(){
  echo "Filtering by package name: $1"
  PID=`adb shell ps | grep -i "$1" | cut -c10-15`;
  adb logcat | grep $PID
}

raw_log(){
  adb -s $SELECTED_DEVICE logcat
}

if [ $# -eq 0 ]; then
  read -p "ðŸ”¬ Insert package name or leave empty:" PACKAGE
  if [ -z "$PACKAGE" ]; then
    raw_log
    exit
  fi
fi

filter_by_package $1
