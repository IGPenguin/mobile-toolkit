#!/bin/bash
LOCATION=$(dirname "$0")
source "$LOCATION"/../common_tools
trap 'ctrlc' 1 2 3 6 15

ctrlc(){
  if $RUNNING_TESTS; then
    adb -s "$SELECTED_DEVICE" shell ps | awk '/com\.android\.commands\.monkey/ { system("adb shell kill " $2) }' >/dev/null 2>&1
    echo "🙈 Monkey eliminated, device is safe to use again"

    adb -s "$SELECTED_DEVICE" shell am task lock stop >/dev/null 2>&1
    echo "🔓 App fullscreen mode disabled"
  fi
  exit 2
}

lock_task_fullscreen(){
  TASK_ID=$(adb -s "$1" shell pidof "$APP_PACKAGE_NAME")
  adb -s "$1" shell am task lock "$TASK_ID"
}

RUNNING_TESTS=false
SEED=1
EVENT_COUNT=10000

android_choose_device
android_device_info "$SELECTED_DEVICE"
android_unlock_device "$SELECTED_DEVICE" 3
APP_PACKAGE_NAME="$(android_get_foreground_package "$1")"
#TODO - check if safe to run, or show prompt (system package/launcher or emulator)
lock_task_fullscreen "$SELECTED_DEVICE"
echo "🐒 Running monkey test..."
RUNNING_TESTS=true
LOG_FILE=~/Desktop/"$APP_PACKAGE_NAME-$MANUFACTURER-$MODEL-API$SDK-$(date +%Y-%m-%d-%H-%M-%S).txt"
adb -s "$SELECTED_DEVICE" shell monkey -p "$APP_PACKAGE_NAME" -s "$SEED" --pct-appswitch 0 --pct-syskeys 0 --pct-anyevent 0 "$EVENT_COUNT" &> "$LOG_FILE"
grep -q "CRASH" "$LOG_FILE" && echo "💥 The app under test crashed!" && exit 1
