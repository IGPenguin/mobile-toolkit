#!/bin/bash
LOCATION=$(dirname "$0")
source $LOCATION/common_tools
android_choose_device

if [ -z "$1" ] ; then
  read -p "â“ What do you want to search for? " $APP_NAME
else
  APP_NAME="'$*'"
fi

echo "ðŸ›’ Searching for $APP_NAME in Google Play..."
adb -s $SELECTED_DEVICE shell monkey -p com.android.vending -c android.intent.category.LAUNCHER 1 &> /dev/null
adb -s $SELECTED_DEVICE shell input keyevent 84
ESCAPED_TEXT=`echo $APP_NAME | sed -e 's/ /\%s/g'`
sleep 1
adb -s $SELECTED_DEVICE shell input text "$ESCAPED_TEXT"
adb -s $SELECTED_DEVICE shell input keyevent 66
