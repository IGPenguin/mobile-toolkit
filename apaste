#!/bin/bash
LOCATION=$(dirname "$0")
source $LOCATION/common_tools

LOREM="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."

escape_spaces(){
  ESCAPED_TEXT=`echo "$1" | sed -e 's/ /\%s/g'`
}

send_text(){
  escape_spaces "$1"

  # Insert fist character, then the rest - workaround for API 28+ edittext bug
  adb -s $SELECTED_DEVICE shell "input text '${ESCAPED_TEXT:0:1}'"
  adb -s $SELECTED_DEVICE shell "input text '${ESCAPED_TEXT:1:${#ESCAPED_TEXT}}'"
}

execute_by_arguments(){
  # If 1st argument empty, ask for input text
  if [ -n "$1" ]
  then
      TEXT=$1
  else
      read -p "üìù Enter text you want to insert: " TEXT
  fi

  # Handle arguments
  if [ "$1" == "-l" ];
  then
    send_text "$LOREM"
  elif [ "$#" -gt 1 ];
  then
    for ARGUMENT in "$@"
    do
      send_text "$ARGUMENT"
      sleep 0.5
      if ! [ $ARGUMENT = ${@:$#} ]; then #if not last argument, jump to next field
       adb -s $SELECTED_DEVICE shell input keyevent 61
      fi
    done
  else
    send_text "$TEXT"
  fi
}

android_choose_device
execute_by_arguments $@
